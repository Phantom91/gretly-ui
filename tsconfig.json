{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["@types/node", "@types/jest", "@types/webpack", "@nuxt/types", "@nuxtjs/axios", "vue-i18n"]
  },
  "include": ["src/nuxt-shims.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
